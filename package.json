{
  "name": "stellar-mcp",
  "version": "0.0.8",
  "description": "A Stellar MCP to interact with Horizon API and Smart Contracts",
  "type": "module",
  "main": "dist/index.js",
  "issues": "https://github.com/genebson/stellar-mcp/issues",
  "bin": {
    "stellar-mcp": "dist/index.js"
  },
  "scripts": {
    "start:dev": "tsx src/index.ts",
    "start:prod": "npm run clean && npm run build && node dist/index.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings=0",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rm -rf dist",
    "build": "tsc",
    "test": "jest src",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "author": "Mauricio Genebrieres",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@stellar/stellar-sdk": "^13.1.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.13",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}