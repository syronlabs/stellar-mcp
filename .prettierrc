{
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "printWidth": 80,
  "endOfLine": "lf",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@data/(.*)$",
    "^@common/(.*)$",
    "^@config/(.*)$",
    "^@book/(.*)$",
    "^@genre/(.*)$",
    "^@iam/(.*)$",
    "^@test/(.*)$",
    "^@/(.*)$",
    "^@root/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": [
    "typescript",
    "classProperties",
    "[\"decorators-legacy\", { \"decoratorsBeforeExport\": true }]"
  ]
}
